<div id="<%= dom_id github_repository %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= github_repository.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Owner:</strong>
    <%= github_repository.owner %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Url:</strong>
    <%= github_repository.url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Stars:</strong>
    <%= github_repository.stargazers_count %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this github repository", github_repository, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this github repository', edit_github_repository_path(github_repository), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
